 /* pages/template/template.wxss */

.order-list{
  border-top: 20rpx solid #f5f5f5;
}
.order-tit{
  height: 80rpx;
  padding: 0 34rpx;
}
.order-tit text{
  font-size: 32rpx;
  color: #333;
}
.order-mian{
  padding: 15rpx 34rpx;
  height: 170rpx;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
}
.order-mian text{
  font-size: 28rpx;
  color: #999;
}
.oder-btn{
  height: 100rpx;
  padding: 0 34rpx;
  justify-content: flex-end;
}
.oder-btn text{
  width: 140rpx;
  height: 55rpx;
  border: 2rpx solid #bbb;
  border-radius: 30rpx;
  text-align: center;
  line-height: 55rpx;
  font-size: 24rpx;
  color: #999;
}
.oder-btn text.pay-money{
  background-color: #4e8cee;
  color: white;
  border: 0;
}